<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="icon" href="~/favicon.png" />
</head>
<body>
    <header>
        <ul class="nav-link-list">
            <li class="nav-link-list-li"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="nav-link-list-li"><a class="nav-link" asp-controller="Book" asp-action="Index">Books</a></li>
            <li class="nav-link-list-li"><a class="nav-link" href="https://www.paypal.com/donate/?hosted_button_id=GLQTCL5N8T2SG">Donate</a></li>
        </ul>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer class= "footer">
        <div class="footer-powered-text">Powered by <a href="https://github.com/ryhorby" class="a-orange">ryhor.by</a></div>
    </footer>
    @await Component.InvokeAsync("View");
</body>
</html>

